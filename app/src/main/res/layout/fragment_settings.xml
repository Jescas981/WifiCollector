<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Form for map size and offset details -->

    <FrameLayout
        android:id="@+id/flMap"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Map ImageView -->
        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/ivLoc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_location_on_24"
            android:transformPivotY="50dp" />

        <ImageView
            android:id="@+id/ivMapPlaceholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_image_search_24" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- GridLayout for input fields -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingHorizontal="15dp"
            android:useDefaultMargins="true">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:hint="Map Width (m)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mapSizeX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:hint="Map Height (m)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mapSizeY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Non-editable fields -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:enabled="false"
                android:focusable="false"
                android:hint="Map Pixels Size X">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mapPixelsX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:enabled="false"
                android:focusable="false"
                android:hint="Map Pixels Size Y">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mapPixelsY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:enabled="false"
                android:focusable="false"
                android:hint="Scale Pixels/Meter X">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/scalePixelsX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:enabled="false"
                android:focusable="false"
                android:hint="Scale Pixels/Meter Y">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/scalePixelsY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

        </GridLayout>

        <!-- Save Button -->
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/teal_200"
            android:padding="12dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:text="Next"
            app:cornerRadius="8dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layOffset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- GridLayout for input fields -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingHorizontal="15dp"
            android:useDefaultMargins="true">

            <!-- Editable fields -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:hint="Offset X">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/offsetX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="0.0" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:hint="Offset Y">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/offsetY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="0.0" />
            </com.google.android.material.textfield.TextInputLayout>
        </GridLayout>

        <!-- Save Button -->
        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/teal_200"
            android:padding="12dp"
            android:src="@drawable/baseline_save_24"
            android:text="Next"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
